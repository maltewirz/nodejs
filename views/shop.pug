extends layouts/main-layout.pug

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://images-na.ssl-images-amazon.com/images/I/41fhsnzKEgL._SX389_BO1,204,203,200_.jpg", alt="A Book")
                        div.card__content
                            h2.product__price $19
                            p.product__description Good book description
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No products

block styles
    link(rel="stylesheet", href="/css/product.css")

